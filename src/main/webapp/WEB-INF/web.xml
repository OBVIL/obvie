<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    id="obvie" 
    version="3.0" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd"
  >
  <display-name>Gallicobvie</display-name>
  <servlet>
    <servlet-name>obvie</servlet-name>
    <servlet-class>fr.sorbonne_universite.obtic.obvie.Rooter</servlet-class>
  </servlet>
  <!-- Override default servlet, limit to static resources -->
  <servlet-mapping>
     <servlet-name>default</servlet-name>
     <url-pattern>/static/*</url-pattern>
  </servlet-mapping>
  <!-- override default jsp, limit to a folder -->
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>/jsp/*</url-pattern>
  </servlet-mapping>
  <!-- The URL mapping servlet -->
  <servlet-mapping>
    <servlet-name>obvie</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
